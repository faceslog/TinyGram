<?xml version="1.0" encoding="utf-8" standalone="no"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">

  <filter>
    <filter-name>root-app</filter-name>
    <filter-class>tinygram.RootFilter</filter-class>
  </filter>

  <servlet>
    <servlet-name>endpoints-api-servlet</servlet-name>
    <servlet-class>com.google.api.server.spi.EndpointsServlet</servlet-class>
    <init-param>
      <param-name>services</param-name>
      <param-value>tinygram.api.InstApi, tinygram.api.UserApi, tinygram.api.PostApi</param-value>
    </init-param>
  </servlet>

  <filter>
    <filter-name>endpoints-api-configuration</filter-name>
    <filter-class>com.google.api.control.ServiceManagementConfigFilter</filter-class>
  </filter>

  <filter>
    <filter-name>endpoints-api-controller</filter-name>
    <filter-class>com.google.api.control.extensions.appengine.GoogleAppEngineControlFilter</filter-class>
    <init-param>
      <param-name>endpoints.projectId</param-name>
      <param-value>${endpoints.project.id}</param-value>
    </init-param>
    <init-param>
      <param-name>endpoints.serviceName</param-name>
      <param-value>${endpoints.project.id}.appspot.com</param-value>
    </init-param>
  </filter>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <filter-mapping>
    <filter-name>root-app</filter-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/addpost</url-pattern>
    <url-pattern>/not-found</url-pattern>
    <url-pattern>/users/*</url-pattern>
    <url-pattern>/posts/*</url-pattern>
  </filter-mapping>

  <servlet-mapping>
    <servlet-name>endpoints-api-servlet</servlet-name>
    <url-pattern>/_ah/api/*</url-pattern>
  </servlet-mapping>

  <filter-mapping>
    <filter-name>endpoints-api-configuration</filter-name>
    <servlet-name>EndpointsServlet</servlet-name>
  </filter-mapping>

  <filter-mapping>
    <filter-name>endpoints-api-controller</filter-name>
    <servlet-name>EndpointsServlet</servlet-name>
  </filter-mapping>
</web-app>
